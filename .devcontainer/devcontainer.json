{
	"name": "GatherQuiz",
	"build": {
		"dockerfile": "Dockerfile"
	},

	// Features to add to the dev container.
	"features": {},

	// Use 'forwardPorts' to make a list of ports available locally.
	"forwardPorts": [3000, 5173, 9323],

	// Use 'postCreateCommand' to run commands after the container is created.
	"postCreateCommand": "sudo chown -R node:node /home/node/.gemini && pnpm install",

	// Configure tool-specific properties.
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"google.gemini-cli-vscode-ide-companion",
				"google.geminicodeassist",
				"mhutchie.git-graph",
				"ms-azuretools.vscode-containers",
				"ms-vscode.vscode-typescript-next",
				"prisma.prisma",
				"yzhang.markdown-all-in-one"
			]
		}
	},

	"mounts": [
		"source=gemini-auth-cache,target=/home/node/.gemini,type=volume"
	],

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
